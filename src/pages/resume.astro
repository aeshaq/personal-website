---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import { withBase } from "../utils/urls";

const resumes = await getCollection("resume");
const resume = resumes[0];
const { Content } = await resume.render();
---

<Layout title="Resume â€” Abdullah Eshaq" description="Resume for Abdullah Eshaq.">
  <section class="resume-page">
    <div class="header">
      <div class="name-row">
        <h1>Abdullah Eshaq</h1>
      </div>
      <a
        class="download"
        href={withBase("/resume/Abdullah_e_Resume.pdf")}
        target="_blank"
        rel="noreferrer"
      >
        Open PDF
      </a>
    </div>
    <section class="resume-content">
      <Content />
    </section>
  </section>
</Layout>

<style>
  .resume-page {
    display: grid;
    gap: 1.5rem;
  }

  .header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
  }

  .name-row {
    display: flex;
    align-items: baseline;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .name-row h1 {
    margin: 0;
  }

  .download {
    padding: 0.6rem 1.2rem;
    border-radius: 999px;
    border: 1px solid rgba(15, 26, 26, 0.2);
    font-weight: 600;
  }

  :global(.resume-content) {
    display: grid;
    gap: 1.5rem;
  }

  :global(.resume-content h2) {
    margin-bottom: 0.6rem;
  }

  :global(.resume-content .role) {
    padding: 1.4rem;
    border-radius: var(--radius);
    background: rgba(255, 255, 255, 0.4);
    border: 1px solid rgba(15, 26, 26, 0.08);
    box-shadow: 0 16px 40px rgba(35, 24, 10, 0.1);
    margin-bottom: 1.2rem;
  }

  :global(.resume-content .role-header) {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
    align-items: baseline;
  }

  :global(.resume-content .role-header h3) {
    margin: 0;
  }

  :global(.resume-content .role-header p) {
    margin: 0.2rem 0 0;
    color: var(--ink-soft);
  }

  :global(.resume-content .role ul) {
    margin: 1rem 0 0;
    padding-left: 1.2rem;
    color: var(--ink-soft);
  }

  :global(.resume-content .detail) {
    margin-top: 0.8rem;
    color: var(--ink-soft);
  }

  :global(.resume-content .skills) {
    display: grid;
    gap: 0.6rem;
  }

  :global(.resume-content .skill-card) {
    margin-bottom: 0;
  }

  :global(.resume-content .skills h4) {
    margin: 0 0 0.4rem;
  }

  :global(.resume-content .skills p) {
    margin: 0;
    color: var(--ink-soft);
  }

  @media (max-width: 720px) {
    .header {
      flex-direction: column;
      align-items: flex-start;
    }

    .name-row {
      flex-direction: column;
      align-items: flex-start;
    }

    :global(.resume-content .role-header) {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
