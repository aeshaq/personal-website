---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import { withBase } from "../utils/urls";

const homeEntries = await getCollection("home");
const home = homeEntries[0];
---

<Layout title={home.data.title} description={home.data.description}>
  <section class="hero">
    <div class="hero-copy">
      <p class="eyebrow">{home.data.eyebrow}</p>
      <h1>{home.data.heading}</h1>
      <p class="lead">{home.data.lead}</p>
      <div class="hero-actions">
        <a class="btn primary" href={withBase("/resume")}>See my resume</a>
      </div>
    </div>
    <div class="hero-card">
      <h2>Now</h2>
      <ul>
        {home.data.now.map((item) => (
          <li>{item}</li>
        ))}
      </ul>
    </div>
  </section>

  <section class="grid">
    {home.data.tiles.map((tile) => (
      <a class="panel" href={tile.href.startsWith("/") ? withBase(tile.href) : tile.href}>
        <h3>{tile.title}</h3>
        <p>{tile.description}</p>
      </a>
    ))}
  </section>
</Layout>

<style>
  .hero {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 2.5rem;
    align-items: center;
    margin-top: 2rem;
  }

  .hero-copy {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .eyebrow {
    text-transform: uppercase;
    letter-spacing: 3px;
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--ink-soft);
  }

  h1 {
    font-size: clamp(2.4rem, 4vw, 3.4rem);
    line-height: 1.05;
    margin: 0;
  }

  .lead {
    font-size: 1.1rem;
    color: var(--ink-soft);
    margin: 0;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .btn {
    padding: 0.75rem 1.4rem;
    border-radius: 999px;
    font-weight: 600;
    transition: transform 160ms ease, box-shadow 160ms ease;
  }

  .btn.primary {
    background: var(--accent);
    color: #fff;
    box-shadow: var(--shadow);
  }

  .btn.ghost {
    border: 1px solid rgba(15, 26, 26, 0.2);
  }

  .btn:hover {
    transform: translateY(-2px);
  }

  .hero-card {
    padding: 2rem;
    background: rgba(255, 255, 255, 0.7);
    border-radius: var(--radius);
    box-shadow: var(--shadow);
  }

  .hero-card h2 {
    margin-top: 0;
  }

  .hero-card ul {
    padding-left: 1.2rem;
    margin: 0.8rem 0 0;
    display: grid;
    gap: 0.6rem;
  }

  .grid {
    margin-top: 3rem;
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  }

  .panel {
    padding: 1.6rem;
    border-radius: var(--radius);
    background: rgba(255, 255, 255, 0.6);
    border: 1px solid rgba(15, 26, 26, 0.08);
    transition: transform 160ms ease, border-color 160ms ease;
  }

  .panel:hover {
    transform: translateY(-4px);
    border-color: rgba(234, 95, 60, 0.4);
  }

  .panel h3 {
    margin-top: 0;
  }
</style>
