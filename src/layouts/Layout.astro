---
import "../styles/content.css";

const {
  title = 'Abdullah Eshaq',
  description = 'Personal website for Abdullah Eshaq.',
  showHomeButton = true,
} = Astro.props;

const isHome = Astro.url.pathname === "/";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body>
    <header class="site-header">
      <div class="brand">
        <a href="/" class="logo">AE</a>
        <div class="brand-text">
          <span class="name">Abdullah Eshaq</span>
          <span class="tagline">Software Engineer</span>
        </div>
      </div>
      <nav class="nav">
        <a href="/about">About</a>
        <a href="/projects">Projects</a>
        <a href="/blog">Blog</a>
        <a href="/resume">Resume</a>
      </nav>
    </header>

    <main class="page">
      {isHome || !showHomeButton ? null : (
        <a class="home-button" href="/">← Back to home</a>
      )}
      <slot />
    </main>

    <footer class="site-footer">
      <span>© {new Date().getFullYear()} Abdullah Eshaq</span>
      <span>Built with Astro + MDX</span>
    </footer>
  </body>
</html>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap");
  :global(:root) {
    --ink: #0f1a1a;
    --ink-soft: #2a3a36;
    --cloud: #f6f2ea;
    --mist: #efe6d8;
    --accent: #ea5f3c;
    --accent-soft: #f4b09c;
    --glass: rgba(255, 255, 255, 0.68);
    --shadow: 0 20px 60px rgba(35, 24, 10, 0.18);
    --radius: 22px;
  }

  :global(*) {
    box-sizing: border-box;
  }

  :global(body) {
    margin: 0;
    min-height: 100%;
    font-family: "Space Grotesk", "Helvetica Neue", Arial, sans-serif;
    color: var(--ink);
    background:
      radial-gradient(1200px 700px at 10% 10%, #f9f1df 0%, transparent 60%),
      radial-gradient(900px 600px at 95% 20%, #f6d5c6 0%, transparent 55%),
      linear-gradient(140deg, #f7f4ef 0%, #f3e8dc 50%, #f1e7dc 100%);
    background-attachment: fixed;
  }

  :global(a) {
    color: inherit;
    text-decoration: none;
  }

  :global(.page) {
    max-width: 980px;
    margin: 0 auto;
    padding: 3rem 1.5rem 4rem;
  }

  :global(.page > *) {
    animation: rise 600ms ease both;
  }

  :global(.page > *:nth-child(2)) {
    animation-delay: 120ms;
  }

  :global(.page > *:nth-child(3)) {
    animation-delay: 240ms;
  }

  .home-button {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.55rem 1rem;
    border-radius: 999px;
    border: 1px solid rgba(15, 26, 26, 0.2);
    font-weight: 600;
    color: var(--ink-soft);
    margin-bottom: 1.2rem;
  }

  .home-button:hover {
    color: var(--accent);
    border-color: rgba(234, 95, 60, 0.4);
  }

  .site-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.5rem 2rem;
    position: sticky;
    top: 0;
    z-index: 10;
    backdrop-filter: blur(16px);
    background: var(--glass);
    border-bottom: 1px solid rgba(15, 26, 26, 0.08);
  }

  .brand {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .logo {
    width: 44px;
    height: 44px;
    display: grid;
    place-items: center;
    border-radius: 14px;
    background: var(--ink);
    color: #fff7ec;
    font-weight: 700;
    letter-spacing: 1px;
  }

  .brand-text {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
  }

  .name {
    font-size: 1.05rem;
    font-weight: 700;
  }

  .tagline {
    font-size: 0.85rem;
    color: var(--ink-soft);
  }

  .nav {
    display: flex;
    gap: 1.5rem;
    font-size: 0.95rem;
    font-weight: 600;
  }

  .nav a {
    padding: 0.4rem 0.2rem;
    border-bottom: 2px solid transparent;
    transition: border-color 150ms ease, color 150ms ease;
  }

  .nav a:hover {
    color: var(--accent);
    border-color: var(--accent);
  }

  .site-footer {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
    padding: 2rem;
    font-size: 0.85rem;
    color: var(--ink-soft);
  }

  @keyframes rise {
    from {
      opacity: 0;
      transform: translateY(12px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 720px) {
    .site-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .nav {
      width: 100%;
      justify-content: space-between;
    }

    .site-footer {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
  }
</style>
